<section class="signup">
  <div class="signup_container">
    <div class="signup_title mb-4">
      <h1>Signup form</h1>
    </div>
    <form class="signup_box">
      <%= form_tag("/users/create") do %>
      <input
        name="name"
        class="mb-3"
        placeholder="Full name"
        value="<%= @name %>"
      /><br />
      <input
        name="email"
        class="mb-3"
        placeholder="Email adress"
        value="<%= @email %>"
      /><br />
      <input
        name="skype_name"
        class="mb-3"
        placeholder="Skype name"
        value="<%= @skype_name %>"
      /><br />
      <input
        name="password"
        type="password"
        class="mb-3"
        placeholder="Password"
        value="<%= @password %>"
      /><br />
      <!-- <input
              type="password"
              name="password"
              class="mb-3"
              placeholder="Confirm your password"
              value="<%= @password%>"
            /><br /> -->
      <!-- <input class="mb-4" type="checkbox" />&nbsp;Do you agee to this term and
            condition?&nbsp;&nbsp;<a href="#">More details.</a><br /> -->
      <input
        class="btn btn-danger py-2 px-5 my-4"
        value="Sign in"
        type="submit"
      ></input>
      <% end %>
    </form>
  </div>
</section>
